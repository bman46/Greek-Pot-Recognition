@page
@model Greek_Pot_Recognition.Pages.resultsModel
@{
    ViewData["Title"] = "results";
}

<div class="card text-center" style="width: 30%">
    <div class="card-header">
        Prediction Results
    </div>
    <img class="card-img-top" src="/API/GetImage?guid=@Model.UserFile?.UploadGuid" alt="Uploaded file">
    <div class="card-body">
        @if (Model.UserFile?.FileResult != null)
        {
        <p class="card-text">This image is likely @Model.PredictionString(Model.UserFile.FileResult).</p>
        }
        else
        {
        <p class="card-text">Failed to process the image. Please try again later with a different image.</p>
        }
    </div>
</div>

@section Scripts {

}
